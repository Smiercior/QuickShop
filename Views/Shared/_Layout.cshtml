<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuickShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuickShop.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow pb-3 pt-3">
            <div class="container-fluid"> 
                <div class="row w-100 d-flex align-items-center">
                    <div class="col-2 d-flex lign-items-center">
                        <a class="navbar-brand me-5 p-0" asp-area="" asp-controller="Home" asp-action="Index"><h3 class="orange m-0">QuickShop</h3></a>
                    </div>
                    <div class="col-4 pe-0">
                        <input class="ps-2 search w-100" placeholder="what you're looking for?"/>
                    </div>
                    <div class="col-2 p-0">
                        <select class="search w-100 border-start-0">
                            <option>All categories</option>
                        </select>
                    </div>
                    <div class="col-1 p-0">
                        <button class="search searchBtn me-5 w-100">Search</button>
                    </div>
                    <div class="col-3">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                         <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                             <div class="row">
                                 <div class="col-2">
                                     <img class="mt-1" src="~/icons/chat.png">
                                 </div>
                                 <div class="col-10">
                                     <partial name="_LoginPartial" />
                                 </div>
                             </div>
                        </div> 
                    </div>
                </div>         
            </div>
        </nav>
    </header>

    <div class="container-fluid border-bottom box-shadow bg-white"> 
        <div class="row d-flex align-items-center mb-1">
            <div class="col-2">
                <select class="search w-100 border border-gray border-start-0 border-top-0 border-bottom-0">
                    <option>All categories</option>
                </select>
            </div>
            <div class="col-2 pe-0">
                <a href="" class="text-dark text-decoration-none">Purchase opportunities</a>
            </div>
            <div class="col-1 p-0">
                <a href="" class="text-dark text-decoration-none">Permiers</a>
            </div>
            <div class="col-2 p-0">
                <a class="nav-link text-dark text-decoration-none" asp-area="" asp-controller="Product" asp-action="SellProduct">Sell on QuickShop</a>
            </div>
        </div>
    </div>

    <div class="container-fluid w-100 m-0 p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container">
            &copy; 2023 - QuickShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
